{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "cargo test",
      "type": "cargo",
      "subcommand": "test",
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Build with g++",
      "type": "shell",
      "command": "g++",
      "args": [
        "${fileDirname}/main.cpp",
        "${fileDirname}/test.cpp",
        "-I/usr/local/include",
        "-L/usr/local/lib",
        "-lyaml-cpp",
        "-o",
        "${fileDirname}/test.out",
        "-DTEST",
        "--debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ]
}
