{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$rustc"
    },
    {
      "type": "cargo",
      "subcommand": "test",
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
